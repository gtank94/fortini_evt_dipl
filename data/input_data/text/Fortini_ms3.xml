            <div n="7">
                <head><subst>
                        <del seq="1">5.</del>
                        <add seq="2">7</add>
                    </subst></head>
                <lg n="17">
                    <lb n="44"/>
                    <l n="1">Non ti dico speranza. Ma è speranza.</l>
                    <lb n="45"/>
                    <l n="2">Questa parola che ti porgo è niente,</l>
                    <lb n="46"/>
                    <l n="3">la sperde il giorno e me con essa. E niente</l>
                    <lb n="47"/>
                    <l n="4">ci consola di essere sostanza</l>
                    <lb n="48"/>
                    <l n="5">delle cose sperate. Su queste <subst>
                            <del seq="1">lente</del>
                            <del seq="2">spente</del>
                            <add seq="3">lente</add>
                        </subst></l>
                    <lb n="49"/>
                    <l n="6">sere di <subst>
                            <del seq="1">pioggia</del>
                            <add seq="2">bruma</add>
                        </subst> e calce la città</l>
                </lg>



                <lg n="18">
                    <lb n="49"/>
                    <l n="1">che mi porta <app>
                            <lem>si assonna</lem>
                            <rdg>inturbata</rdg>
                        </app> nei viali</l>
                    <lb n="50"/>
                    <l n="2"><subst>
                            <del seq="1">da</del>
                            <add seq="2">fra</add>
                        </subst> autotreni di <subst>
                            <del seq="3">fango</del>
                            <add seq="4">buio</add>
                        </subst>
                        <subst>
                            <del seq="1">e buio,</del>
                            <add seq="2">e sempre</add>
                        </subst> muore</l>


                    <lb n="50"/>
                    <l n="3">fra ponti di bitume, fari, scorie...</l>
                    <lb n="51"/>
                    <l n="4">Qui sarò stato<del seq="1">. Dentro i generali</del>
                        <add seq="2">io e vivo. Ai generali</add></l>
                    <lb n="1"/>
                    <l n="5">destini che mi struggono, <subst>
                            <del seq="1">l'</del>
                            <add seq="2">il mio</add>
                        </subst>errore</l>
                    <app>
                        <rdg><lb n="52"/><l n="6">sempre <subst>
                                    <del seq="1">il</del>
                                    <add seq="2">col</add>
                                </subst> vero, che mi<subst>
                                    <del seq="1">ei</del>
                                    <add seq="2">o</add>
                                </subst> fu<del seq="1">rono</del>, sarà</l></rdg>


                        <rdg><lb n="53"/><l n="6"><note type="critical" resp="#GT">Qui diverse varianti per il verso di chiusa.
                                    Quella accettata in Officina sarà l'ultima.</note>
                                <del seq="1">mio col mio vero per sempre sarà.</del></l></rdg>
                        <rdg><lb n="54"/><l n="6"><add seq="2">mio per sempre col vero mio
                            sarà</add></l></rdg>
                        <rdg>
                            <lb n="55"/><l n="6">mio, e per sempre, <del seq="0">ma</del> e più il
                                vero mio, sarà</l></rdg>

                        <rdg><lb n="56"/><l n="6">mio e più il mio vero, per sempre, sarà.</l></rdg>

                        <rdg><lb n="57"/><l n="6">per sempre e più il mio vero resterà</l></rdg>

                        <rdg><lb n="58"/><l n="6"><subst>
                                    <del seq="1">sempre e</del>
