                <lg n="14">
                    <lb n="27"/>
                    <l n="1"><subst>
                            <del seq="1">Ma</del>
                            <add seq="2">Pure</add>

                        </subst> più forti dei loro brusii, più sottil<subst>
                            <del seq="1">e</del>
                            <add seq="2">i</add>
                        </subst></l>
                    <lb n="28"/>
                    <l n="2">dei nostri ragionamenti, più astut<subst>
                            <del seq="1">i</del>
                            <add seq="2">e</add>
                        </subst></l>
                    <lb n="29"/>
                    <l n="3"><subst>
                            <del seq="1">del destino</del>
                            <add seq="2">della passione</add>
                        </subst>, ritessono <add seq="1">la muta</add></l>
                    <lb n="30"/>
                    <l n="4"><add seq="1">realtà con le sue tenaci file</add></l>
                    <lb n="1"/>
                    <l n="5">le forze produtti<subst>
                            <del seq="1">ve</del>
                            <add seq="2">ve</add>
                        </subst>
                        <add>e</add> si tramutano</l>
                    <lb n="31"/>
                    <l n="6">in rapporti di produzione, e sta</l>
                </lg>

                <lg n="15">
                    <lb n="32"/>
                    <l n="1">questa, in ultima analisi, in rapporto</l>
                    <lb n="33"/>
                    <l n="2"><app>

                            <lem>con <subst>
                                    <del seq="1">la ansia</del>
                                    <add seq="2">ritm</add>
                                </subst> che ti scrivo...</lem>
                            <rdg>con <subst>
                                    <del seq="1">il verso</del>
                                    <del seq="2">la parola</del>
                                    <del seq="3">quest'ansia</del>
                                </subst> che scrivo... </rdg>
                        </app> Nelle officine </l>
                    <lb n="34"/>
                    <l n="3">di Varsavia, le <subst>
                            <del seq="1">rigide</del>
                            <del seq="2">disperate</del>
                        </subst> mattine </l>
                    <lb n="35"/>
                    <l n="4"><app>
                            <rdg><del seq="0">gr</del> di gelo, abrasivi, binari</rdg>
                            <rdg>di <subst>
                                    <del seq="1">ferraglia</del>
                                    <del seq="2">di amianto</del>
                                    <del seq="3">abrasivi</del>
                                    <del seq="4">binari</del>
                                </subst></rdg>
                        </app> e di ruggine, fra smorti</l>
                    <lb n="36"/>
                    <l n="5">cortili, odono <add seq="1">forse ora</add> la fine</l>
                    <lb n="37"/>
                    <l n="6">dei nostri tempi, nelle cifre che</l>
                </lg>




                <lg n="16">
                    <lb n="38"/>
                    <l n="1">Grodzizk <app>
                            <lem>legge</lem>
                            <rdg>infigge</rdg>
                        </app> il microfono su folle</l>
                    <lb n="39"/>
                    <l n="2">grige e decise come <subst>
                            <del seq="1">quelle </del>
                            <add seq="2">altre,</add>
                        </subst>allora <add>,</add></l>
                    <lb n="40"/>
                    <l n="3">sui graniti di Pietrogrado; <add>e</add> chi ora</l>
                    <lb n="41"/>
                    <l n="4">va nei parchi di Buda<del seq="1">pest</del> e le <add seq="2"><del>quieto</del></add> zolle</l>
                    <lb n="42"/>
                    <l n="5"><del seq="1">fissa</del><add seq="2"
                        >guarda</add><note type="critical" resp="#GT">Aggiunto a matita in corrispondenza del rigo precedente, a destra.
                        
                        </note><subst>
                            <del seq="1"> peste</del>
<add seq="2">lerce</add>

                            
                        </subst> di <subst>
                            <del seq="1">foglie e cingoli</del>
                            <add seq="2">cingoli e passi</add>
                        </subst>, lavora</l>
                    <lb n="43"/>
                    <l n="6"><del seq="0">anche per</del> in <add seq="1">suo</add> cuore<add
                            seq="1">,</add>
                        <add>poeta,</add>anche per te.</l>
                </lg>
